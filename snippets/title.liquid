{% liquid
  assign s = block.settings
%}

{%- capture style_attribute -%}
  style="
  {%- if s.text_align_mobile != blank -%}
    --text-align-mobile: {{ s.text_align_mobile }};
  {%- endif -%}
  
  {%- if s.text_align != blank -%}
    --text-align: {{ s.text_align }};
  {%- endif -%}
  
  {%- if s.mobile_font_size > 0 -%}
    --mobile-font-size: {{ s.mobile_font_size }}px;
  {%- endif -%}
  {%- if s.desktop_font_size > 0 -%}
    --desktop-font-size: {{ s.desktop_font_size }}px;
  {%- endif -%}

  "
{%- endcapture -%}

{% capture class_attribute %}
{{ s.style_mobile }} {{ s.style_tablet }} {{ s.style_desktop }}

{% if s.text_align_mobile != blank %}
  [text-align:var(--text-align-mobile)]
{% endif %}
{% if s.text_align != blank %}
  lg:[text-align:var(--text-align)]
{% endif %} 

relative
{% endcapture %}

<{{ s.level }}
  class="block--title section__heading {{ class_attribute | strip_newlines | strip }}"
  {{ style_attribute | remove_first: 'style=""' }}
  {{ block.shopify_attributes }}
>
  {{ s.title | newline_to_br | replace: '//', '<br>' }}
</{{ s.level }}>
