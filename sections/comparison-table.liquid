{% comment %}
  comparison-table.liquid
  Example usage of a CSS Grid for a comparison table.
{% endcomment %}

<section class="py-16 md:py-18">
  <div class="wrapper--narrow">
    <!-- Heading & subtitle -->
    <div class="w-full pb-16 mx-auto space-y-4 text-center lg:w-2/3 xl:w-1/2 xl:max-w-124 md:pb-18">
      <div class="mx-auto max-w-72 md:max-w-full">
        {% content_for 'block', type: 'title', id: 'title' %}
      </div>

      {% content_for 'block', type: 'richtext', id: 'richtext' %}
    </div>

    <div class="md:mx-0 grid gap-0 grid-cols-[1.5fr_1.2fr_1.2fr] sm:grid-cols-3 *:p-2 md:*:p-4 lg:*:py-6">
      <!-- Header row -->
      <div class="border-0 border-b border-solid border-beige-500"></div>
      <div class="flex justify-center py-3 text-center border border-solid bg-light-cream border-beige rounded-t-2xl text-lg lg:text-[1.375rem] font-black font-montserrat ">
        {{ section.settings.blb_heading }}
      </div>

      <div class="text-center flex items-center justify-center flex-col body-xl py-3 border-0 border-b border-beige-500 border-solid lg:text-[1.375rem] font-black font-montserrat">
        {{ section.settings.other_heading }}
        {% comment %} {{ 'The Other Guys' }} {% endcomment %}
      </div>

      <!-- Repeat row blocks -->
      {% content_for 'blocks' %}

      {% comment %} Footer row {% endcomment %}
      <div
        class="border-b-0 min-h-8 border-x-0"
        role="presentation"
        aria-hidden="true"
      ></div>
      <div
        class="py-2 text-center border border-t-0 border-solid bg-light-cream min-h-8 rounded-b-2xl border-beige"
        role="presentation"
        aria-hidden="true"
      ></div>
      <div
        class="border-b-0 min-h-8 border-x-0"
        role="presentation"
        aria-hidden="true"
      ></div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Comparison Table",
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Other beds don't come close"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Because how it is made matters. And this oneâ€™s worth every penny."
    },
    {
      "type": "header",
      "content": "Table heading row"
    },
    {
      "type": "text",
      "id": "blb_heading",
      "label": "Brand column heading",
      "default": "The Beast"
    },
    {
      "type": "text",
      "id": "other_heading",
      "label": "Other column heading",
      "default": "\"Ballistic\" Beds"
    }
  ],
  "blocks": [
    {
      "type": "comparison-table-row"
    }
  ],
  "presets": [
    {
      "name": "Comparison Table",
      "blocks": [
        {
          "type": "comparison-table-row"
        },
        {
          "type": "comparison-table-row"
        },
        {
          "type": "comparison-table-row"
        }
      ]
    }
  ]
}
{% endschema %}
